<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<?import javafx.scene.text.Text?>
<?import com.sun.javafx.scene.control.DoubleField?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.appacademia.controller.IncluirFuncionarioController"
      spacing="10" alignment="CENTER"
      style="-fx-padding: 20; -fx-background-color: #f8f8f8;">

    <Label text="Cadastrar Novo UsuÃ¡rio"
           style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtNome" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="CPF:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtCpf" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="txtEmail" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Data de Nascimento:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dpNascimento" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Cargo:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="txtCargo" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Salario:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="txtSalario" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Senha:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <PasswordField fx:id="txtSenha" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Salvar" onAction="#salvarFuncionario"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Cancelar" onAction="#fecharJanela"
                style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
    </HBox>

</VBox>
